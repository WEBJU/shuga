<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/da_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#36C8C7C7"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivBack"
            style="@style/DABackIcon" />


        <TextView
            style="@style/DAHeading"
            android:layout_marginTop="@dimen/da_spacing_standard"
            android:text="Create Account" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/da_spacing_standard"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/DAEditTextHint"
                    android:layout_marginStart="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/da_spacing_standard"
                    android:text="First Name"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtemail"
                    style="@style/DaEditText"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_marginStart="@dimen/_28sdp"
                    android:layout_marginTop="@dimen/da_spacing_standard"
                    android:background="@color/white"
                    android:hint="First Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/DAEditTextHint"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/da_spacing_standard"
                    android:text="Last Name"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtemailb"
                    style="@style/DaEditText"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_marginStart="@dimen/_18sdp"
                    android:layout_marginTop="@dimen/da_spacing_standard"
                    android:background="@color/white"
                    android:hint="Last Name" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            style="@style/DAEditTextHint"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Email"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/email"
            style="@style/DaEditText"
            android:layout_marginStart="@dimen/_28sdp"
            android:layout_marginTop="@dimen/da_spacing_standard"
            android:layout_marginEnd="@dimen/_48sdp"
            android:background="@color/white"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal">


            <TextView
                style="@style/DAEditTextHint"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:text="Password"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password"
                style="@style/DaEditText"
                android:layout_width="339dp"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:background="@color/white"
                android:hint="Enter a password"
                android:inputType="textPassword"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal">


            <TextView
                style="@style/DAEditTextHint"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:text="@string/you_are_interested_in_of_what_age"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/boy"
                style="@style/DaEditText"
                android:layout_width="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:background="@color/white"
                android:hint="You A" />

            <EditText
                android:id="@+id/girl"
                style="@style/DaEditText"
                android:layout_width="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:background="@color/white"
                android:hint="Month" />

            <EditText
                android:id="@+id/age"
                style="@style/DaEditText"
                android:layout_width="@dimen/_100sdp"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:background="@color/white"
                android:hint="Year" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30sdp"
            android:orientation="horizontal">


            <TextView
                style="@style/DAEditTextHint"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:text="How much sugar per month?"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p20k"
                style="@style/DaEditText"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:background="@color/white"
                android:gravity="center"
                android:hint="20k-100k" />

            <TextView
                android:id="@+id/p100k"
                style="@style/DaEditText"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:background="@color/white"
                android:gravity="center"
                android:hint="100k-250k" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p250k"
                style="@style/DaEditText"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:background="@color/white"
                android:gravity="center"
                android:hint="250k-750k" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/p750k"
                style="@style/DaEditText"
                android:layout_width="329dp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginStart="@dimen/_28sdp"
                android:layout_marginTop="@dimen/da_spacing_standard"
                android:layout_marginEnd="@dimen/da_spacing_standard"
                android:background="@color/white"
                android:gravity="center"
                android:hint="250k-750k" />

        </LinearLayout>


        <TextView
            android:id="@+id/continuer"
            style="@style/Theme9MaterialButton"
            android:layout_marginStart="@dimen/da_spacing_xlarge"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/da_spacing_xlarge"
            android:layout_marginBottom="@dimen/da_spacing_xlarge"
            android:gravity="center_horizontal"
            android:text="Continue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/da_spacing_large"
            android:layout_marginEnd="@dimen/da_spacing_large" />

    </LinearLayout>
</ScrollView>